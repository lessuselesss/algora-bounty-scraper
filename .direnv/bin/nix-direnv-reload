#!/usr/bin/env bash
set -e
if [[ ! -d "/home/lessuseless/Projects/Flakes/algora-bounty-scraper" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/home/lessuseless/Projects/Flakes/algora-bounty-scraper")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/home/lessuseless/Projects/Flakes/algora-bounty-scraper" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/home/lessuseless/Projects/Flakes/algora-bounty-scraper/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/home/lessuseless/Projects/Flakes/algora-bounty-scraper/.envrc" "/home/lessuseless/Projects/Flakes/algora-bounty-scraper/.direnv"/*.rc
