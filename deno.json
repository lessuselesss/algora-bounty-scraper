{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "tasks": {
    "production": "deno run --allow-all scripts/production-scraper.ts",
    "monitor": "deno run --allow-all scripts/monitoring-dashboard.ts",
    "health": "deno run --allow-all scripts/health-check.ts",
    "alerts": "deno run --allow-all scripts/alerting-system.ts",

    "firecrawl:start": "deno run --allow-all scripts/firecrawl-manager.ts --start",
    "firecrawl:stop": "deno run --allow-all scripts/firecrawl-manager.ts --stop",
    "firecrawl:restart": "deno run --allow-all scripts/firecrawl-manager.ts --restart",
    "firecrawl:status": "deno run --allow-all scripts/firecrawl-manager.ts --status",
    "firecrawl:test": "deno run --allow-all scripts/firecrawl-manager.ts --test",
    "firecrawl:logs": "deno run --allow-all scripts/firecrawl-manager.ts --logs",
    "firecrawl:cleanup": "deno run --allow-all scripts/firecrawl-manager.ts --cleanup",

    "scrape": "deno run --allow-all src/index.ts",
    "test": "deno test --allow-all tests/",
    "setup": "deno run --allow-all scripts/setup-repo.ts",
    "encrypt": "deno run --allow-all scripts/encrypt-secrets.ts",
    "decrypt": "deno run --allow-all scripts/decrypt-secrets.ts",
    "stats": "deno run --allow-all src/utils/generate-stats.ts",
    "manual": "deno run --allow-all scripts/manual-run.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check src/index.ts",
    "dev": "deno run --allow-all --watch src/index.ts",
    "ci": "deno run --allow-all src/index.ts --ci"
  },
  "imports": {
    "@std/": "https://deno.land/std@0.208.0/",
    "@cliffy/": "https://deno.land/x/cliffy@v1.0.0-rc.3/",
    "nanoid": "https://deno.land/x/nanoid@v3.0.0/mod.ts"
  },
  "exclude": [
    ".deno/",
    ".cache/",
    ".local/",
    ".config/",
    "data/archive/",
    "logs/"
  ],
  "fmt": {
    "files": {
      "include": ["src/", "scripts/", "tests/"],
      "exclude": ["data/", "logs/"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "lint": {
    "files": {
      "include": ["src/", "scripts/", "tests/"],
      "exclude": ["data/", "logs/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "test": {
    "files": {
      "include": ["tests/"]
    }
  }
}