# Algora Bounty Scraper Environment Configuration

# ==============================================================================
# FIRECRAWL CONFIGURATION
# ==============================================================================

# Primary Firecrawl API key (external service)
FIRECRAWL_API_KEY=fc-your-primary-key-here

# Additional API keys for rotation (optional)
# FIRECRAWL_API_KEY_2=fc-your-secondary-key-here
# FIRECRAWL_API_KEY_3=fc-your-tertiary-key-here

# Self-hosted Firecrawl configuration
FIRECRAWL_PREFER_SELF_HOSTED=false
FIRECRAWL_SELF_HOSTED_URL=http://localhost:3002
FIRECRAWL_SELF_HOSTED_AUTH_SECRET=

# ==============================================================================
# SOPS ENCRYPTION
# ==============================================================================

# Age key for SOPS encryption (generated during setup)
# SOPS_AGE_KEY=AGE-SECRET-KEY-...

# ==============================================================================
# GITHUB INTEGRATION
# ==============================================================================

# GitHub token for API access and automated commits
# GITHUB_TOKEN=ghp_your_github_token_here

# ==============================================================================
# MONITORING & ALERTING
# ==============================================================================

# Slack integration (optional)
# SLACK_BOT_TOKEN=xoxb-your-slack-token
# SLACK_CHANNEL=#bounty-alerts

# Discord webhooks (optional)
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Generic webhook for custom integrations
# WEBHOOK_URL=https://your-service.com/webhook

# ==============================================================================
# BOUNTY-PIPE INTEGRATION
# ==============================================================================

# Webhook URL for notifying bounty-pipe of new data
# BOUNTY_PIPE_WEBHOOK_URL=https://bounty-pipe.com/webhook

# bounty-pipe GitHub token for triggering workflows
# BOUNTY_PIPE_TOKEN=ghp_bounty_pipe_token

# ==============================================================================
# PERFORMANCE TUNING
# ==============================================================================

# Concurrency limits
FIRECRAWL_MAX_CONCURRENT=5
FIRECRAWL_RATE_LIMIT_DELAY=1000
FIRECRAWL_REQUEST_TIMEOUT=30000

# Batch processing
BATCH_SIZE=10
MAX_RETRY_ATTEMPTS=3

# ==============================================================================
# DEVELOPMENT SETTINGS
# ==============================================================================

# Enable debug logging
DEBUG=false

# Skip encryption for local development
SKIP_ENCRYPTION=false

# Use local data files instead of scraping
USE_MOCK_DATA=false